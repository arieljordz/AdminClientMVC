@model AdminClientMVC.Models.tbl_employees

@{
    ViewData["Title"] = "Admin";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper" style="padding-top: 60px;">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Admin</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Admin</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="card card-secondary">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-edit pr-2"></i>Employee Details</h3>
                </div>

                <div class="card-body">

                    <input type="hidden" id="TypeId" value="@ViewBag.UserTypeId" />

                    <div class="row pl-2">
                        <button type="button" class="btn btn-success" id="btn_add_new"><i class="fa fa-plus mr-2"></i>Add New</button>
                    </div>

                    <div class="row pb-3 pt-3">
                        <div class="col-md-12">
                            <div class="dataTables_wrapper table-responsive dt-bootstrap4">
                                <table id="tbl_employees" class="table table-bordered table-hover text-center table-sm" style="width:100%"></table>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="card-footer">
                </div>
            </div>
        </div><!--/. container-fluid -->
    </section>
    <!-- /.content -->

    <div id="modal_add_employee" class="modal fade" role="dialog" data-backdrop="static">
        <div class="modal-dialog modal-lg pt-5">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="modal_name"><i class="fa fa-user pr-2"></i>Add New Employee</h4>
                    <button type="button" class="close" data-dismiss="modal">×</button>
                </div>
                <form id="form_employee" novalidate="novalidate">

                    <div class="modal-body">
                        @Html.HiddenFor(x => x.Id)
                        <div class="row">
                            <div class="col-5">
                                <div class="form-group">
                                    <div for="FirstName">First Name</div>
                                    <input type="text" name="FirstName" class="form-control" placeholder="First Name" required="required">
                                </div>
                            </div>
                            <div class="col-5">
                                <div class="form-group">
                                    <div for="LastName">Last Name</div>
                                    <input type="text" name="LastName" class="form-control" placeholder="Last Name" required="required">
                                </div>
                            </div>
                            <div class="col-2">
                                <div>User Type</div>
                                <div class="form-group">
                                    @Html.DropDownList("UserTypeId", ViewBag.cmbUserType as SelectList, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.UserTypeId)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3">
                                <div class="form-group">
                                    <div for="Birthday">Birthday</div>
                                    <input type="date" name="Birthday" class="form-control">
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group">
                                    <div for="PhoneNumber">Phone Number</div>
                                    <input type="text" name="PhoneNumber" class="form-control" placeholder="Phone Number" required="required">
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group">
                                    <div for="EmailAddress">Email Address</div>
                                    <input type="email" name="EmailAddress" class="form-control" placeholder="EmailAddress" required="required">
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group">
                                    <div for="Password">Password</div>
                                    <input type="password" name="Password" class="form-control" placeholder="Password" required="required">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <div for="Address">Address</div>
                                    <input type="text" name="Address" class="form-control" placeholder="Complete Address">
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <div for="Notes">Notes</div>
                                    <textarea name="Notes" class="form-control" rows="2"></textarea>
                                </div>
                            </div>

                        </div>

                    </div>

                    <div class="modal-footer">
                        <button type="submit" id="btn_add" class="btn btn-success float-right">Add</button>
                    </div>
                </form>
            </div>

        </div>
    </div>

</div>
<!-- /.content-wrapper -->
@section Scripts
{
    <script>

        document.addEventListener("DOMContentLoaded", function () {

            ValidateForm();
            function ValidateForm() {
                $.validator.setDefaults({
                    submitHandler: function () {
                        SaveEmployee();
                    }
                });
                $('#form_employee').validate({
                    rules: {
                        FirstName: {
                            required: true
                        },
                        LastName: {
                            required: true
                        },
                        PhoneNumber: {
                            required: true,
                            digits: true
                        },
                        EmailAddress: {
                            required: true,
                            email: true
                        },
                        Password: {
                            required: true
                        },
                    },
                    messages: {
                        FirstName: {
                            required: "This field is required"
                        },
                        LastName: {
                            required: "This field is required"
                        },
                        PhoneNumber: {
                            required: "This field is required"
                        },
                        EmailAddress: {
                            required: "This field is required"
                        },
                        Password: {
                            required: "This field is required"
                        },
                    },
                    errorElement: 'span',
                    errorPlacement: function (error, element) {
                        error.addClass('invalid-feedback');
                        element.closest('.form-group').append(error);
                    },
                    highlight: function (element, errorClass, validClass) {
                        $(element).addClass('is-invalid');
                        console.log(element);
                    },
                    unhighlight: function (element, errorClass, validClass) {
                        $(element).removeClass('is-invalid');
                        console.log(element);
                    }
                });
            }

            LoadEmployees();

            function LoadEmployees() {
                $('#tbl_employees').DataTable({
                    destroy: true,
                    responsive: true,
                    processing: false,
                    search: true,
                    stateSave: true,
                    info: true,
                    searching: true,
                    paging: true,
                    //order: [[1, "asc"], [2, "asc"]],
                    //lengthMenu: [[5, 10, 20, -1], [5, 10, 20, "All"]],
                    ajax: {
                        "url": "../Home/LoadEmployees",
                        "type": "POST",
                        "datatype": "JSON",
                    },
                    columns: [
                        { "data": "userType", title: "User Type", sClass: "text-center", orderable: false },
                        { "data": "fullName", title: "FullName", sClass: "text-center", orderable: false },
                        { "data": "birthday", title: "Birthday", sClass: "text-center", orderable: false },
                        { "data": "phoneNumber", title: "Phone Number", sClass: "text-center", orderable: false },
                        { "data": "emailAddress", title: "Email Address", sClass: "text-center", orderable: false },
                        { "data": "address", title: "Address", sClass: "text-center", orderable: false },
                        { "data": "notes", title: "Notes", sClass: "text-center", orderable: false },
                        {
                            "data": "id", title: "Action", render: function (data) {
                                return "<div class='row justify-content-center'>" +
                                    "<div class='dropdown dropleft'>" +
                                    "<button id='btnbars' type='button' class='btn btn-sm btn-success btnbars' data-toggle='dropdown'>" +
                                    "<i class='fa fa-bars'></i>" +
                                    "</button> <div class='dropdown-menu'>" +
                                    "<div class='container fluid'> " +
                                    "<a id='btnUpdate' class='btn btn-warning btn-sm fa fa-edit col-sm-12' style='margin-bottom: 3px; margin-top: 3px;'>" +
                                    "&nbspUpdate</a>" +
                                    "<br />" +
                                    "<a id='btnDelete' class='btn btn-danger btn-sm fa fa-trash col-sm-12' style='margin-bottom: 3px; margin-top: 3px; color: white;'>" +
                                    "&nbspDelete</a>" +
                                    "</div></div></div ></div>";
                            }
                        }
                    ]
                });

                $('#tbl_employees tbody').off().on('click', 'tr', function (e) {
                    e.preventDefault();
                    if ($(e.target).is("[id^=btnUpdate],[id^=btnUpdate] i")) {
                        UpdateEmployee();
                    }
                    else if ($(e.target).is("[id^=btnDelete],[id^=btnDelete] i")) {
                        RemoveEmployee();
                    }
                    else if (!$(e.target).is("[id^=btnbars],[id^=btnbars] i")) {
                        if (!$(this).hasClass("dtactive")) {
                            $(this).parent().find("tr").removeClass("dtactive");
                            $(this).addClass("dtactive");
                            document.querySelector("[name='Id']").value = SelectedValue("tbl_employees", "id");
                            document.querySelector("[name='FirstName']").focus();
                        } else {
                            $(this).removeClass("dtactive");
                            document.querySelector("[name='Id']").value = 0;
                            document.getElementById("form_employee").reset();
                        }
                    }
                });

            }

            function SaveEmployee() {

                $.ajax({
                    url: "../Home/SaveEmployee",
                    type: 'POST',
                    data: EmployeeDetails(),
                    cache: false,
                    contentType: false,
                    processData: false,
                    success: function (res) {
                        if (res.success == true) {
                            Swal.fire({
                                text: "Successfully saved.",
                                icon: "success",
                                showCancelButton: false,
                                confirmButtonColor: '#28a745',
                                confirmButtonText: "Ok"
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    $("#form_employee").trigger("reset");
                                    LoadEmployees();
                                    if ($("[name='Id']").val() != 0) {
                                        $("#modal_add_employee").modal("hide");
                                        $("#modal_name").html("Add New Employee");
                                        $("#btn_add").html("Add");
                                    }
                                    $("[name='Id']").val(0);
                                }
                            });
                        } else {
                            Swal.fire("Error!", res.message, "error");
                        }
                    }
                });
            }

            function EmployeeDetails() {
                var formData = new FormData();
                formData.append('Id', $("[name='Id']").val());
                formData.append('UserTypeId', $("[name='UserTypeId']").val());
                formData.append('FirstName', $("[name='FirstName']").val());
                formData.append('LastName', $("[name='LastName']").val());
                formData.append('Birthday', $("[name='Birthday']").val());
                formData.append('PhoneNumber', $("[name='PhoneNumber']").val());
                formData.append('EmailAddress', $("[name='EmailAddress']").val());
                formData.append('Address', $("[name='Address']").val());
                formData.append('Notes', $("[name='Notes']").val());
                formData.append('Password', $("[name='Password']").val());
                return formData;
            }

            function UpdateEmployee() {
                if ($("[name='Id']").val() != 0) {
                    $.ajax({
                        url: "../Home/UpdateEmployee?Id= " + $("[name='Id']").val(),
                        type: "GET",
                        cache: false,
                        contentType: false,
                        processData: false,
                        success: function (res) {
                            if (res.data != null) {
                                $("#modal_add_employee").modal("show");
                                $("#modal_name").html("Update Employee");
                                $("#btn_add").html("Update");
                                $("[name='UserTypeId']").val(res.data.userTypeId);
                                $("[name='FirstName']").val(res.data.firstName);
                                $("[name='LastName']").val(res.data.lastName);
                                $("[name='Birthday']").val(DateToText(res.data.birthday));
                                $("[name='PhoneNumber']").val(res.data.phoneNumber);
                                $("[name='EmailAddress']").val(res.data.emailAddress);
                                $("[name='Address']").val(res.data.address);
                                $("[name='Notes']").val(res.data.notes);
                                $("[name='Password']").val(res.data.password);
                            }
                        }
                    });
                }
                else {
                    Swal.fire('Information!', 'Please select a record first.', 'info');
                }
            }

            function RemoveEmployee() {
                if ($("[name='Id']").val() != 0) {
                    Swal.fire({
                        text: "Are you sure you want to delete this record?",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#28a745',
                        cancelButtonColor: '#dc3545',
                        confirmButtonText: 'Yes, delete it!'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            $.ajax({
                                url: '../Home/RemoveEmployee?&Id=' + $("[name='Id']").val(),
                                type: 'POST',
                                success: function (res) {
                                    if (res.success == true) {
                                        Swal.fire('Success!', 'Record has been deleted.', 'success');
                                        LoadEmployees();
                                        $("[name='Id']").val(0);
                                    } else {
                                        Swal.fire('Error!', res.msg, 'error');
                                    }
                                }
                            });
                        }
                    });
                }
                else {
                    Swal.fire('Information!', 'Please select a record first.', 'info');
                }
            }

            document.getElementById("btn_add_new").addEventListener("click", function (e) {
                e.preventDefault();
                $("#modal_add_employee").modal("show");
                $("#form_employee").trigger("reset");
            });


        });

    </script>
}

