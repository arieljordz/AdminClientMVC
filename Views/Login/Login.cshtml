@{
    ViewData["Title"] = "Login";
}

<div class="row d-flex justify-content-center" style="padding-top: 200px;">
    <div class="card">
        <div class="card-header bg-success-origin">
            <div class="card-title">
                <label>
                    Login Details
                </label>
            </div>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("SignIn", "Login", FormMethod.Post, new { enctype = "multipart/form-data", id = "formLogin" }))
            {
              @*   <div class="form-group">
                    @Html.DropDownList("UserTypeId", ViewBag.cmbUserType as SelectList, new { @class = "form-control" })
                </div> *@
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Email Address" name="EmailAddress" autocomplete="off" />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password" name="Password" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-block btn-secondary btn-md" value="Login" />
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            }
        </div>
    </div>
</div>